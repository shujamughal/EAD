<Window x:Class="Lecture27_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture27_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label HorizontalContentAlignment="Center" Content="User Name" Background="#FFCDA0A0" Width="150" Height="50" Margin="0,0,20,0" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontStretch="SemiExpanded"></Label>
            <TextBox Name="textUserName" Background="#FFC1C1EA" Width="250" Height="50" Margin="0,0,20,0"></TextBox>
            <Button Content="Save" Width="100" Height="50" FontSize="20" FontWeight="Bold" Click="Button_Click"></Button>
            
        </StackPanel>
    </Grid>
</Window>
