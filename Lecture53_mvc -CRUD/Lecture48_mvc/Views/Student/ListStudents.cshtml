@model List< Lecture48_mvc.Models.Student>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<table class="table table-striped table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>CGPA</th>
            <th>Semester</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Lecture48_mvc.Models.Student s in Model) { 
        
        <tr>
            <td>   @s.Name       </td>
            <td>   @s.Age       </td>
            <td>   @s.CGPA       </td>
            <td>   @s.Semester       </td>
            <td>

                <a class="btn btn-info" asp-action="Details" asp-route-id="@s.Id" >Details</a>
                <a class="btn btn-warning"  asp-action="Edit"asp-route-id="@s.Id" >Edit</a>
                <a class="btn btn-danger" asp-action="Remove" asp-route-id="@s.Id">Remove</a>
            </td>
        </tr>
        
        }


    </tbody>
</table>